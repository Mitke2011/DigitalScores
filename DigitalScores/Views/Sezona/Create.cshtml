@model DigitalScores.Models.Sezona

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}




@section welcome
    {
    <a title="" href="#" data-toggle="dropdown" data-target="#profile-messages" class="dropdown-toggle">
        <i class="icon icon-user">
        </i>  <span class="text"> @ViewBag.AdminIme @ViewBag.AdminPrezime</span><b class="caret"></b>
    </a>
}
<body>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Unos Sezone</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <section id="RefereeEntryForm">

                            @using (Html.BeginForm("Create", "Sezona", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="control-group">
                                    <label class="control-label">Naziv</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Naziv, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Naziv)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Aktivna sezona</label>
                                    <div class="controls">
                                        @Html.CheckBoxFor(m => m.Tekuca, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Tekuca)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Naziv Lige</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Liga.Naziv, new { @class = "form-control" })
                                        @Html.ActionLink("Izaberite Ligu", "SelectLeagueSeason", "Lige", new { seasonId = 0 }, null)
                                        @Html.HiddenFor(model => model.Liga.Id)
                                    </div>
                                </div>                               

                                <div class="form-actions">
                                    <input type="submit" value="Snimi" class="btn btn-success" />|
                                    @Html.ActionLink("Nazad na listu Sezona.", "Index", "Sezona", null, null)
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--Footer-part-->
    <div class="row-fluid">
        <div id="footer" class="span12"> 2018 &copy; Digital Score. Power by DScore <a href="http://www.digitalscore.org"></a> </div>
    </div>
    <!--end-Footer-part-->
    <script src="js/jquery.min.js"></script>
    <script src="js/jquery.ui.custom.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.uniform.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/jquery.validate.js"></script>
    <script src="js/herc.js"></script>
    <script src="js/herc.form_validation.js"></script>
</body>

