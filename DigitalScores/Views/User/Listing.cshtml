@model IEnumerable<DigitalScores.Models.Users>

@{
    ViewBag.Title = "Listing";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

<h2>Listing</h2>

<p>
    @Html.ActionLink("Dodaj novog korisnika", "Create", null, new { @style = "font-size:15px" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Privilege)
        </th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        @if (item.Privilege == DigitalScores.Models.Privilege.Admin)
        {
            <td>
                @Html.Display("Administrator")
            </td>
        }
        @if (item.Privilege == DigitalScores.Models.Privilege.Delegate)
        {
            <td>
                @Html.Display("Delegat")
            </td>
        }
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
