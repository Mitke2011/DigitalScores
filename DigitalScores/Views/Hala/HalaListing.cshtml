@model List<DigitalScores.Models.Hala>

@{
    ViewBag.Title = "HalaListing";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

@section welcome
    {
    <a title="" href="#" data-toggle="dropdown" data-target="#profile-messages" class="dropdown-toggle">
        <i class="icon icon-user">
        </i>  <span class="text"> @ViewBag.AdminIme @ViewBag.AdminPrezime</span><b class="caret"></b>
    </a>
}
@Html.ActionLink("+ Dodaj Halu", "Create", "Hala", null, new { @class = "button-link-class" })

<h3>Hale</h3>
    <table class="table">
        <tr>
            <th>
                Naziv hale
            </th>
            <th>
                Grad
            </th>
            <th>Akcije</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grad)
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "Edit", new { id = item.Id })
                </td>
            </tr>
        }

    </table>



