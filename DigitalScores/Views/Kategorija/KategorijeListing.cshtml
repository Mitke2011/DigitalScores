@model IEnumerable<DigitalScores.Models.Kategorija>

@{
    ViewBag.Title = "KategorijeListing";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

<h3>Kategorije</h3>


<table class="table">
    <tr>
        <th>
            Naziv Kategorije
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
           @Html.ActionLink("Edit", "LeaguesForCategory", "Lige", new { katId=item.Id }, null) 
        </td>
    </tr>
}

</table>
<button>
    @Html.ActionLink("Dodaj kategoriju", "Create")
</button>
