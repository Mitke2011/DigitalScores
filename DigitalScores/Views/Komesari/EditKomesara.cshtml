@model DigitalScores.Models.Komesari
@using DigitalScores.DbManagers
@using DigitalScores.Models

@{
    ViewBag.Title = "EditKomesara";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

<body>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Izmeni komesara: @Model.Ime @Model.Prezime</h5>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                    </div>
                    <div class="widget-content nopadding">
                        <section id="RefereeEntryForm">

                            @using (Html.BeginForm("Edit", "Komesari", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="control-group">
                                    <label class="control-label">Ime</label>
                                    <div class="controls">
                                        @Html.EditorFor(m => m.Ime, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Ime)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Prezime</label>
                                    <div class="controls">
                                        @Html.EditorFor(m => m.Prezime, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Prezime)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Email</label>
                                    <div class="controls">
                                        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Telefon</label>
                                    <div class="controls">
                                        @Html.EditorFor(m => m.Telefon, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Telefon)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Liga</label>
                                    <div class="controls">

                                        @Html.DropDownListFor(m => m.LigaId,
                                               new SelectList(LigaDbManager.Current.GetLeagues(), "Id", "Naziv"),
                                                "Izaberi Ligu")
                                        @Html.ValidationMessageFor(m => m.LigaId)
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <input type="submit" value="Snimi" class="btn btn-success" />
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
