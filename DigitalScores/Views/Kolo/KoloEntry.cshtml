@model DigitalScores.Models.Kolo
@using DigitalScores.DbManagers

@{
    ViewBag.Title = "KoloEntry";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

<body>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Unos kola</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <section id="RefereeEntryForm">

                            @using (Html.BeginForm("Create", "Kolo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="control-group">
                                    <label class="control-label">Naziv</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Naziv, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Naziv)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Sezona</label>
                                    <div class="controls">

                                        @Html.DropDownListFor(m => m.sezonaId,
                                               new SelectList(SezonaDbManager.Current.GetAll(), "Id", "Naziv"),
                                                "Izaberi Sezonu")
                                        @Html.ValidationMessageFor(m => m.sezonaId)
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Liga</label>
                                    <div class="controls">

                                        @Html.DropDownListFor(m => m.ligaId,
                                               new SelectList(LigaDbManager.Current.GetLeagues(), "Id", "Naziv"),
                                                "Izaberi Ligu")
                                        @Html.ValidationMessageFor(m => m.ligaId)
                                    </div>
                                </div>
   

                                <div class="form-actions">
                                    <input type="submit" value="Snimi" class="btn btn-success" />
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--Footer-part-->
    <div class="row-fluid">
        <div id="footer" class="span12"> 2018 &copy; Digital Score. Power by DScore <a href="http://www.digitalscore.org"></a> </div>
    </div>
    <!--end-Footer-part-->
    <script src="js/jquery.min.js"></script>
    <script src="js/jquery.ui.custom.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.uniform.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/jquery.validate.js"></script>
    <script src="js/herc.js"></script>
    <script src="js/herc.form_validation.js"></script>
</body>

