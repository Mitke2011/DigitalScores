                                    <label class="control-label">Grad</label>
                                    <div class="controls">
                                        <input type="text" name="grad" id="grad">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Liga</label>
                                    <div class="controls">
                                        <input type="text" name="liga" id="liga">
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <input type="submit" value="Snimi" class="btn btn-success">
