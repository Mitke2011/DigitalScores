@model DigitalScores.Models.Liga
@using DigitalScores.DbManagers


@{
    ViewBag.Title = "LigeEntry";
    Layout = "~/Views/Shared/_DefaultAdminLayout.cshtml";
}

<body>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Unos kola</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <section id="RefereeEntryForm">

                            @using (Html.BeginForm("Create", "Lige", new { katId = ViewBag.katId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="control-group">
                                    <label class="control-label">Naziv lige</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Naziv, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Naziv)
                                    </div>
                                </div>
                            
   

                                <div class="form-actions">
                                    <input type="submit" value="Snimi" class="btn btn-success" />
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

    </div>

