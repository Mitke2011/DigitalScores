@model List<DigitalScores.Models.Komesari>

@{
    ViewBag.Title = "KomesarListing";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h3>Komesari</h3>

<p>
    @Html.ActionLink("Dodaj Novog", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ime i Prezime
        </th>
        <th>
           Email
        </th>
        <th>
          Telefon
        </th>
        <th>
            Liga
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ime) @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Liga.Naziv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 

        </td>
    </tr>
}

</table>
