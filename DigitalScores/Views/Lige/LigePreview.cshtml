@model List<DigitalScores.Models.Liga>

@{
    ViewBag.Title = "LigePreview";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Pregled liga -  @Model.First().LigaKategorija.Naziv</h2>


<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
